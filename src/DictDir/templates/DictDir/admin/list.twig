{% extends "layoutAdmin.twig" %}

{% block content %}
    <div class="row">
        <div class="col-md-12">
            <ul class="nav nav-tabs navbar-right">
                {% for table in tables %}
                    <li class="{{ table == currentTable ? 'active' : '' }}"><a
                                href="{{ route_url("dictdir_list", {"table" : table}) }}">{{ table }}</a></li>
                {% endfor %}
            </ul>
        </div>
    </div>
    <br/>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
            <tr>
                {% for field in fields %}
                    <th>{{ field }}</th>
                {% endfor %}
                <th>actions</th>
            </tr>
            </thead>
            <tbody>
            {% for item in items %}
                <tr>
                    {% for field in fields %}
                        <td>
                            {% if attribute(item, field).name is not defined %}
                                {{ attribute(item, field) }}
                            {% else %}
                                {{ attribute(item, field).name }}
                            {% endif %}
                        </td>
                    {% endfor %}
                    <td>
                        <a href="{{ route_url("dictdir_edit", {"table" : currentTable, "id" : item.id}) }}"
                           class="btn btn-sm btn-warning"><span
                                    class="glyphicon glyphicon-edit"></span> </a>
                        <a href="{{ route_url("dictdir_rm", {"table" : currentTable, "id" : item.id})}}"
                           class="btn btn-sm btn-danger confirm"><span class="glyphicon glyphicon-remove"></span> </a>


                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
        <a href="{{ route_url("dictdir_add", {"table":currentTable}) }}" class="btn btn-primary"><span
                    class="glyphicon glyphicon-file"></span> Add {{ currentTable }}</a>
    </div>

{% endblock %}
